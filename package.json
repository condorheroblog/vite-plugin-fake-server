{
	"name": "@condorhero/monorepo",
	"version": "2.0.2",
	"private": true,
	"type": "module",
	"license": "MIT",
	"packageManager": "pnpm@8.13.1",
	"author": "Condor Hero",
	"description": "A fake server plugin for Vite.",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/condorheroblog/vite-plugin-fake-server.git"
	},
	"bugs": {
		"url": "https://github.com/condorheroblog/vite-plugin-fake-server/issues"
	},
	"homepage": "https://github.com/condorheroblog/vite-plugin-fake-server/blob/main/README.md",
	"scripts": {
		"postinstall": "simple-git-hooks",
		"prepublishOnly": "nr build",
		"dev": "esno index.ts",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"format": "prettier --write .",
		"test": "vitest",
		"build": "nr -r build",
		"build:watch": "nr -r build:watch",
		"typecheck": "tsc --noEmit",
		"release": "bumpp -r && pnpm -r publish --access public"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged"
	},
	"lint-staged": {
		"*.{ts,js,mjs,cjs,cts,mts,json}": [
			"eslint --fix",
			"prettier --write"
		],
		"*.md": [
			"eslint --fix"
		],
		"*.vue": [
			"prettier --write"
		]
	},
	"devDependencies": {
		"@eslint/js": "^8.56.0",
		"@rollup/plugin-json": "^6.1.0",
		"@types/node": "^20.10.6",
		"@typescript-eslint/eslint-plugin": "^6.17.0",
		"@typescript-eslint/parser": "^6.17.0",
		"bumpp": "^9.2.1",
		"esbuild": "^0.19.11",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-define-config": "^2.1.0",
		"eslint-plugin-import": "^2.29.1",
		"eslint-plugin-mdx": "^3.1.2",
		"eslint-plugin-node-import": "^1.0.4",
		"eslint-plugin-prettier": "^5.1.2",
		"esno": "^4.0.0",
		"lint-staged": "^15.2.0",
		"prettier": "^3.1.1",
		"rimraf": "^5.0.5",
		"rollup": "^4.9.2",
		"rollup-plugin-dts": "^6.1.0",
		"rollup-plugin-esbuild": "^6.1.0",
		"rollup-plugin-node-externals": "^6.1.2",
		"simple-git-hooks": "^2.9.0",
		"typescript": "^5.3.3",
		"vitest": "^1.1.1"
	}
}
